<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
	
  <parent>
    <groupId>org.overturetool.core</groupId>
    <artifactId>vdmj_compatibility_tests</artifactId>
    <version>2.2.2<!--Replaceable: Main Version--></version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <groupId>org.overturetool.core.vdmj_compatibility_tests</groupId>
  <artifactId>vdmjtypecheckertest</artifactId>  
  <name>Test for the VDMJ Type Checker</name>

  <build>
    <plugins>
      <plugin>
      	<groupId>org.apache.maven.plugins</groupId>
	<artifactId>maven-surefire-plugin</artifactId>
	<configuration>
	  <testFailureIgnore>true</testFailureIgnore>
	  <includes>
	    <include>**/*Test.java</include>
	    <include>**/*Test?.java</include>
	    <include>**/*TestSuite.java</include>
	  </includes>
	</configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>org.overturetool.core</groupId>
      <artifactId>testframework</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.overturetool.core.vdmj_compatibility_tests</groupId>
      <artifactId>vdmj_compatibility_utils</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.overturetool.core</groupId>
      <artifactId>vdmj</artifactId>
      <version>2.1.2</version>	<!-- This is frozen for testing against the Overture 1.2.x/VDMJ version -->
    </dependency>
  </dependencies>
</project>
