Packages
base org.overture.codegen.cgast;
analysis org.overture.codegen.cgast.analysis;
  
Tokens
/* This section declared tokens as internal types or external classes
 * internal definitions:
 *  plus='+';
 *  
 * external
 *  location = 'java:org.overture.ast.lex.LexLocation';
 */
 
  vdmType = 'java:org.overture.ast.types.PType';
  SourceNode = 'java:org.overture.codegen.ir.SourceNode';
  
  // Java
  java_Boolean = 'java:java.lang.Boolean';
  java_Long = 'java:java.lang.Long';
  java_Integer = 'java:java.lang.Integer';
  java_Double = 'java:java.lang.Double';
  java_Character = 'java:java.lang.Character';
  java_String = 'java:java.lang.String';
  java_Object = 'java:java.lang.Object';
  
  // Wraps a string type so it can be used as a field type
  eString ='java:org.overture.ast.util.ClonableString';
     
Abstract Syntax Tree
/* This section declares the AST by giving root nodes and their possible sub classe */

CG {-> package='org.overture.codegen.cgast'
	| [sourceNode]:SourceNode
	| (tag):java_Object // Tags carry information to support IR analysis
	| (metaData):eString*} // Meta data is intended to hold printable information such as code annotations
	= #pattern
	| #bind
	| #multipleBind
	| #name
	| #decl
	| #imports
	| #import
	| #exports
	| #export
	| #stateDesignator
	| #objectDesignator
	| #localParam
	| #stm
	| #letBeSt
	| #exp
	| #type
	| #modifier
	| #term
	| #traceDecl
	| #traceCoreDecl
	;

#imports {-> package='org.overture.codegen.cgast.declarations'} 
    = {module} [name]:java_String [imports]:CG.#imports.fromModule*
    | {fromModule} [name]:java_String [signatures]:CG.#import**
    ;
    
#import {-> package='org.overture.codegen.cgast.declarations'
	|	[name]:java_String 
	|	[renamed]:java_String 
	|	[fromModuleName]:java_String/*(from):CG.#decl.module*/}
    =   {all}
    |   {type} [decl]:CG.#decl.type
    |   #value
    ;
    
#value {-> package='org.overture.codegen.cgast.declarations'
	|	(importType):CG.#type}
    =   {value}
    |   {function} [typeParams]:CG.#name.token* //Because [typeParams]:java_String* is not supported by the AstCreator
    |   {operation}
    ;

#exports {-> package='org.overture.codegen.cgast.declarations'}
    =   {module} [exports]:CG.#export**
    ;

#export {-> package='org.overture.codegen.cgast.declarations'
	|	[decl]:CG.#decl*}
    =   {all}
    |   {function} [nameList]:CG.#name.token* (exportType):CG.#type
    |   {operation} [nameList]:CG.#name.token* (exportType):CG.#type
    |   {type} [name]:java_String [struct]:java_Boolean
    |   {value} [nameList]:CG.#name.token* (exportType):CG.#type
    ;

#pattern {-> package='org.overture.codegen.cgast.patterns'}
	= {identifier} [name]:java_String
	| {ignore}
	| {bool} [value]:java_Boolean
	| {char} [value]:java_Character
	| {int}	[value]:java_Long
	| {null}
	| {quote} [value]:java_String
	| {real} [value]:java_Double
	| {string} [value]:java_String
	| {tuple} [patterns]:CG.#pattern*
	| {record} [typename]:java_String [patterns]:CG.#pattern* [type]:CG.#type
	;

#bind {-> package='org.overture.codegen.cgast.patterns'
	|	[pattern]:CG.#pattern}
    =   {set} [set]:CG.#exp //binds
    |   {type} [type]:CG.#type
    ;
		
#multipleBind {-> package='org.overture.codegen.cgast.patterns'
	|	[patterns]:CG.#pattern*}
    =   {set}  [set]:CG.#exp //binds
    |   {type} [type]:CG.#type
    ;
   
#name {-> package='org.overture.codegen.cgast.name'}
	=	{type}
		[name]:java_String
		[definingClass]:java_String
	|	{token}
		[name]:java_String
	;
    
