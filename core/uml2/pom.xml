		<version>2.23.0.v20200630-0516</version>
		<systemPath>${basedir}/src/lib/org.eclipse.emf.ecore_2.23.0.v20200630-0516.jar</systemPath>
	</dependency>
	<dependency>
		<groupId>org.eclipse.emf</groupId>
		<artifactId>common</artifactId>
		<scope>system</scope>
		<version>2.20.0.v20200822-0801</version>
		<systemPath>${basedir}/src/lib/org.eclipse.emf.common_2.20.0.v20200822-0801.jar</systemPath>
	</dependency>
