		<artifactId>org.eclipse.emf.ecore.xmi</artifactId>
		<scope>system</scope>
		<version>2.10.1</version>
		<systemPath>${basedir}/src/lib/org.eclipse.emf.ecore.xmi-2.10.1.jar</systemPath>
	</dependency>
  	</dependencies>
</project>
