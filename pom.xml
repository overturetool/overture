<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.overturetool</groupId>
  <artifactId>root</artifactId>
  <packaging>pom</packaging>
  <version>1.0.0</version>
  <name>OvertureTool</name>
 
  <modules>
    <module>core</module>
    <module>tools</module>
    <module>ide</module>
    

  </modules>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
      
      
        <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-release-plugin</artifactId>
        <version>2.0-beta-7</version>
        <configuration>
          <tagBase>svn:https://overture.svn.sourceforge.net/svnroot/overture/tags</tagBase>
        </configuration>
      </plugin>
      
        <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-site-plugin</artifactId>
        <version>2.0.1</version>
      </plugin>
    </plugins>

    <extensions>
      <extension>
        <groupId>org.apache.maven.wagon</groupId>
        <artifactId>wagon-ftp</artifactId>
        <version>1.0-beta-2</version>
      </extension>
      <extension>
        <groupId>org.apache.maven.wagon</groupId>
        <artifactId>wagon-webdav</artifactId>
        <version>1.0-beta-2</version>
      </extension>
    </extensions>
  </build>



  <distributionManagement>
    <repository>
      <id>sourceforge.net</id>
      <name>Overture Repo af SF.Net</name>
      <url>sftp://web.sourceforge.net/home/groups/o/ov/overture/htdocs/maven/repo</url>
    </repository>
    <snapshotRepository>
      <id>sourceforge.net</id>
      <name>Overture Snapshot Repo af SF.Net</name>
      <url>sftp://web.sourceforge.net/home/groups/o/ov/overture/htdocs/maven/snapshotrepo</url>
    </snapshotRepository>
    <site>
      <id>sourceforge.net</id>
      <url>scp://shell.sourceforge.net/home/groups/o/ov/overture/htdocs/maven/doc</url>
    </site>
  </distributionManagement>



  <scm>
    <connection>scm:svn:https://overture.svn.sourceforge.net/svnroot/overture/trunk</connection>
    <developerConnection>scm:svn:https://overture.svn.sourceforge.net/svnroot/overture/trunk</developerConnection>
    <url>https://overture.svn.sourceforge.net/svnroot/overture/trunk</url>
  </scm>

  <issueManagement>
    <system>sourceforge</system>
    <url>http://sourceforge.net/tracker/?group_id=141350</url>
  </issueManagement>

<organization>
  <name>Overture</name> 
  <url>http://www.overturetool.org</url> 
  </organization>

</project>
