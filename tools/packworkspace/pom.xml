  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.overture.tools</groupId>
    <artifactId>tools</artifactId>
    <version>2.0.0<!--Replaceable: Main Version--></version>
    <relativePath>../pom.xml</relativePath>
