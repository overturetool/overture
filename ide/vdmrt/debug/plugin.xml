<extension
        point="org.eclipse.ui.popupMenus">
     <viewerContribution
           id="org.overture.ide.vdmrt.ui.RulerBarPopupActions"
           targetID="org.overture.ide.vdmrt.ui.VdmRtEditor.RulerContext">
        <action
              class="org.eclipse.debug.ui.actions.RulerToggleBreakpointActionDelegate"
              icon="icons/cview16/brkp_obj.gif"
              id="org.overture.ide.vdmrt.ui.ToggleBreakpointRuler"
              label="Toggle Breakpoint"
              menubarPath="additions">
        </action>
     </viewerContribution>
  </extension>
  
  
   <!-- Enables double click on ruler for breakpoint creation -->
	 <extension
         point="org.eclipse.ui.editorActions">
      <editorContribution
            targetID="org.overture.ide.vdmrt.ui.VdmRtEditor"
            id="org.overture.ide.debug.VdmEditor.BreakpointRulerActions">
         <action
               actionID="RulerDoubleClick"
               class="org.eclipse.debug.ui.actions.RulerToggleBreakpointActionDelegate"
               id="org.overture.ide.debug.ui.actions.ManageBreakpointRulerAction"
               label="%AddBreakpoint.label"
               style="toggle">
         </action>
      </editorContribution>
	</extension>
