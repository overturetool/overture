<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.overture</groupId>
    <artifactId>ide</artifactId>
    <version>2.0.0<!--Replaceable: Main Version--></version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <packaging>eclipse-plugin</packaging>

  <groupId>org.overture.ide</groupId>
  <artifactId>org.overture.ide.help</artifactId>
  <name>org.overture.ide.help</name>
  
  <build>
    <resources>
      <resource>
        <directory>${project.basedir}/../../documentation/QuickOverviewVDMPPOperators</directory>
        <targetPath>${project.basedir}/html</targetPath>
        <filtering>false</filtering>
        <includes>
          <include>QuickOverviewofVDMOperators.pdf</include>
        </includes>
      </resource>
      <resource>
        <directory>${project.basedir}/../../documentation/UserGuideOvertureIDE</directory>
        <targetPath>${project.basedir}/html</targetPath>
        <filtering>false</filtering>
        <includes>
          <include>OvertureIDEUserGuide.pdf</include>
        </includes>
      </resource>
      <resource>
        <directory>${project.basedir}/../../documentation/VDM10LangMan</directory>
        <targetPath>${project.basedir}/html</targetPath>
        <filtering>false</filtering>
        <includes>
          <include>VDM10_lang_man.pdf</include>
        </includes>
      </resource>
    </resources>

    <plugins>
      <plugin>
        <groupId>org.overture.tools.maven</groupId>
        <artifactId>example-packager</artifactId>
        <version>${project.version}</version>
        <configuration>
          <outputDirectory>${project.basedir}/html</outputDirectory>
          <outputPrefix>Example_package_</outputPrefix>
          <slExamples>
            <param>${project.basedir}/../../documentation/examples/VDMSL</param>
          </slExamples>
          <ppExamples>
            <param>${project.basedir}/../../documentation/examples/VDM++</param>
          </ppExamples>
          <rtExamples>
            <param>${project.basedir}/../../documentation/examples/VDMRT</param>
          </rtExamples>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>package-examples</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>

    <pluginManagement>
      <plugins>
	<!--This plugin's configuration is used to store Eclipse m2e settings 
	    only. It has no influence on the Maven build itself. -->
	<plugin>
	  <groupId>org.eclipse.m2e</groupId>
	  <artifactId>lifecycle-mapping</artifactId>
	  <version>1.0.0</version>
	  <configuration>
	    <lifecycleMappingMetadata>
	      <pluginExecutions>
		<pluginExecution>
		  <pluginExecutionFilter>
		    <groupId>org.overture.tools.maven</groupId>
		    <artifactId>example-packager</artifactId>
		    <versionRange>[1.0.1,)</versionRange>
		    <goals>
		      <goal>package-examples</goal>
		    </goals>
		  </pluginExecutionFilter>
		  <action>
		    <execute>
		      <runOnIncremental>false</runOnIncremental>
		    </execute>
		  </action>
		</pluginExecution>
	      </pluginExecutions>
	    </lifecycleMappingMetadata>
	  </configuration>
	</plugin>
      </plugins>
    </pluginManagement>
  </build>

</project>

  

